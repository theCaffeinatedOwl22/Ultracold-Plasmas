{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++-10",
            "args": [

                "-std=c++20", // choose c++ version

                // list all .cpp files to compile
                "${fileBasename}", // this is the file to compile (i.e., the one you are running)

                "-g",   // compile for debugging mode

                "-o",   // option for outputting object file
                "${fileBasenameNoExtension}", // name for object file, typically has no extension

                "-lm",  // option for linking modules
                "-lstdc++fs",    // <filesystem> library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}