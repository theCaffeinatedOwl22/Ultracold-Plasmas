{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                // includes
                "-I", "source",
                // flags
                "-std=c++20", "-fopenmp", "-g",
                // source
                "main.cpp",
                "source${pathSeparator}*.cpp",
                // executable
                "-o",
                "main.exe",
                // linkers
                "-lm", "-lstdc++fs"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}