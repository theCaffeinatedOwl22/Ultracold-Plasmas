{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                // include paths
                "-I", "source",

                // compiler flags
                "-std=c++20", "-fopenmp", "-g",
                
                // source files
                "main.cpp",
                "source\\*.cpp",

                // object files
                "-o", "main.exe",

                // linker flags
                "-lm", "-lstdc++fs", "-larmadillo"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}